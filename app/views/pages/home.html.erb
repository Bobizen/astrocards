<div class="hp-button">
  <%= render "shared/newnavbar" %>
  <% if user_signed_in? %>
    <%= render "shared/logo" %>
    <div class="newbonus-card" data-controller="newbonus" data-newbonus-target="item" data-action="click->newbonus#bonusdisplay">
      <%= link_to "#" do %>
        <%= image_tag "objects/northstar.png" %>
      <% end %>
    </div>
    <div class="hello-card">
      <%= "Hi, #{current_user.nickname}!" %>
    </div>
    <div id="aicard" class="ai-card">
      <%= @response %>
    </div>
    <button type="button" class="btn btn-primary cards-day" data-bs-toggle="modal" data-bs-target="#myModal" id="cardButton">
      Cards of the day
    </button>
  <% else %>
    <div class="an">
      <%= image_tag "logo/astro-card-white.png" %>
      <div class="mt-2" data-controller="introtyped">
        <span id="e1" class="intro-text ps-2"  data-introtyped-target="itema" data-todisplay="Collect Astro Cards"></span><br>
        <span id="e2" class="intro-text ps-3" data-introtyped-target="itemb" data-todisplay="Discover and Learn about space"></span><br>
        <span id="e3" class="intro-text ps-4" data-introtyped-target="itemc" data-todisplay="Share your cards in your Gallery!"></span>
      </div>
    </div>
  <% end %>
</div>

<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <p class="modal-title perso-modal-title" id="exampleModalLabel">You got 2 new cards!</p>
        <%# <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> %>
      </div>
      <div class="modal-body" id="modal-body" >

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
  </div>
</div>
</div>

<script>
  var aicard = document.getElementById('aicard');
  var button = document.getElementById('cardButton');
  var modalBody = document.getElementById('modal-body');
  var modal = document.getElementById('myModal');
    button.addEventListener('click', (e) => {
    fetch('newcards').then(response => response.json()).then(data => {
    aicard.classList.add("d-none");
    modalBody.innerHTML = `
     <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <div class="p-2 mb-0" style='max-height:500px;'>
                    <div class="flip-container">
                    <div class="flippers container">
                        <div class="display-cards-card container mt-4 " >
                          <div class="row">
                            <div class="col-md-6 d-flex align-items-center justify-content-center">
                              <div class="d-flex flex-column align-items-center justify-content-center">
                                <div class="display-cards-pic">
                                  <img src="/assets/objects/${data.object1.object.image_path}">
                                </div>
                                <p style="font-size: 18px; font-family: AKONY;">${data.object1.object.name_en}</p>
                                <div class="display-cards-info">
                                  <div class="horizontal-line"></div>
                                  <p style="text-align: left; font-size: 16px;">Type of object
                                    <strong style="font-size:18px; padding-left:1rem;">${data.object1.type}</strong>
                                  </p>
                                  <p style="text-align: left; font-size: 16px;">Class
                                    <strong style="font-size:18px;padding-left:1rem;">${data.object1.object.classification}</strong>
                                  </p>
                                  <div class="horizontal-line"></div>
                                  <p class="font-weight-bold" style="font-size: 20px;">Get more in your collection</p>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>

                    </div>
                    </div>
                  </div>
                </div>
                <div class="carousel-item">
                <div class="p-2 mb-0" style='max-height:500px;'>
                  <div class="flip-container">
                      <div class="flippers container">
                        <!-- Card front -->
                          <div class="display-cards-card container mt-4 " >
                            <div class="row">
                              <div class="col-md-6 d-flex align-items-center justify-content-center">
                                <div class="d-flex flex-column align-items-center justify-content-center">
                                  <div class="display-cards-pic">
                                    <img src="/assets/objects/${data.object2.object.image_path}">
                                  </div>
                                  <p style="font-size: 18px; font-family: AKONY;">${data.object2.object.name_en}</p>
                                  <div class="display-cards-info">
                                    <div class="horizontal-line"></div>
                                    <p style="text-align: left; font-size: 16px;">Type of object
                                      <strong style="font-size:18px; padding-left:1rem;">${data.object2.type}</strong>
                                    </p>
                                    <p style="text-align: left; font-size: 16px;">Class
                                      <strong style="font-size:18px;padding-left:1rem;">${data.object2.object.classification}</strong>
                                    </p>
                                    <div class="horizontal-line"></div>
                                    <p class="font-weight-bold" style="font-size: 20px;">Get more in your collection</p>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>

                      </div>
                  </div>
                </div>
                </div>

              </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
    </div>
    `
    })});
</script>
