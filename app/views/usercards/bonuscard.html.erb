<div class="display-cards-bg-bc">
  <%= render "shared/newnavbar" %>
  <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
  <%= render "shared/logo" %>
    <div class="flipper">
      <% card = Card.find(@card.card_id) %>
      <% object = card.object %>
      <!-- Card front -->
      <div class="flip-card-front">
        <div class="display-cards-card-bc container">
          <div class="row">
            <div class="col-md-6 d-flex align-items-center justify-content-center">
              <p class="display-cards-title">Bonus Card</p>
            </div>
            <div class="col-md-6 d-flex align-items-center justify-content-center">
              <div class="d-flex flex-column align-items-center justify-content-center">
                <div class="display-cards-pic">
                  <%= image_tag "objects/#{object.image_path}" %>
                </div>
                <p style="font-size: 18px; font-family: AKONY;">
                  <i class="fas fa-star"></i>
                  <%= object.name_en %>
                  <i class="fas fa-star"></i>
                </p>
                <div class="display-cards-info">
                  <div class="horizontal-line"></div>
                  <div class="d-flex justify-content-between">
                    <div>
                      <p style="text-align: center;">Family Member - Planet</p>
                      <p>
                        <strong style="text-align: left; font-family: AKONY;">Earth</strong>
                      </p>
                    </div>
                    <div class="vertical-line"></div>
                    <div style="width: 50%;">
                      <p style="text-align: center;">Family Member - Satellites</p>
                      <p>
                        <strong style="text-align: left; font-family: AKONY;">Moon</strong>
                      </p>
                    </div>
                  </div>
                  <div class="horizontal-line"></div>
                  <p style="text-align: left; font-size: 14px; font: bold">Orbital Period:</p>
                  <p style="text-align: left; font-size: 14px;">The Moon orbits the Earth, completing one orbit approximately every 27.3 days, known as the sidereal month. However, due to the Earth's orbit around the Sun, it takes about 29.5 days for the Moon to complete its phases, from new moon to new moon, which is known as the synodic month.</p>
                  <%# <p style="text-align: left; font-size: 14px;">Main moons:
                    <strong style="font-size:18px; font-family: AKONY;"><%= object.average_distance_to_earth</strong> %>
                  </p>
                  <div class="horizontal-line"></div>
                  <div class="display-cards-buttons d-flex justify-content-between">
                    <button class="btn flip-button">
                      <i class="fas fa-sync-alt"></i> Flip card
                    </button>
                    <%= simple_form_for(@card, url: usergallery_usergallerycards_path(@usergallery), method: 'POST') do |f| %>
                      <%= f.input :id, as: :hidden %>
                      <%= f.submit "+ Add to gallery", class: 'm-0 btn' %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Card back -->
      <div class="flip-card-back">
        <div class="display-cards-card-bc container">
          <div class="row">
            <div class="col-md-6 d-flex align-items-center justify-content-center">
              <p class="display-cards-title"><%= object.name_en %> Information</p>
            </div>
            <div class="display-cards-info">
              <div class="col-md-6 d-flex align-items-center justify-content-center">
                <div class="d-flex justify-content-between">
                  <div class="display-cards-pic-back">
                    <%= image_tag "objects/#{object.image_path}" %>
                  </div>
                  <div class="vertical-line"></div>
                  <div style="width: 50%;">
                    <p style="text-align: center; font-size: 14px;">Average Distance to Earth:
                    <p>
                    <strong style="font-size:18px; font-family: AKONY;">~0.38</strong>
                    /mm km
                    </p>
                  </div>
                </div>
              </div>
              <div class="horizontal-line"></div>
                <p style="text-align: left; font: bold;">Funfact</p>
                <p style="text-align: left;"><%= object.funfact %></p>
              <div class="horizontal-line"></div>
              <p style="text-align: left;">Description:</p>
              <p style="text-align: left;"><%= object.summary %></p>
              <div class="horizontal-line"></div>
              <div class="display-cards-buttons d-flex justify-content-between">
                <button class="btn flip-button">
                  <i class="fas fa-sync-alt"></i> Flip card
                </button>
                <%= simple_form_for(@card, url: usergallery_usergallerycards_path(@usergallery), method: 'POST') do |f| %>
                  <%= f.input :id, as: :hidden %>
                  <%= f.submit "+ Add to gallery", class: 'm-0 btn' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
