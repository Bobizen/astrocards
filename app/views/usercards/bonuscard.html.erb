<div class="display-cards-bg-bc">
  <%= render "shared/newnavbar" %>
  <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
  <%= render "shared/logo" %>
    <div class="flipper">
      <% card = Card.find(@card.card_id) %>
      <% object = card.object %>
      <!-- Card front -->
      <div class="flip-card-front">
        <div class="display-cards-card-bc container">
          <div class="row">
            <div class="col-md-6 d-flex align-items-center justify-content-center">
              <p class="display-cards-title bonus-card-title">Bonus Card</p>
            </div>
            <div class="col-md-6 d-flex align-items-center justify-content-center">
              <div class="d-flex flex-column align-items-center justify-content-center">
                <div class="display-cards-pic">
                  <%= image_tag "objects/#{object.image_path}" %>
                </div>
                <p style="font-size: 18px; font-family: AKONY;">
                  <i class="fas fa-star"></i>
                  <%= object.name_en %>
                  <i class="fas fa-star"></i>
                </p>
                <div class="display-cards-info">
                  <div class="horizontal-line"></div>
                    <div>
                      <p style="text-align: left; font-size: 14px; font-family: AKONY;">Family Members:</p>
                      <% @cards_in_bonus.each do |id| %>
                        <% card = Card.find(id) %>
                        <% objectolivier = card.object %>
                        <% if card.object_type == 'Planet' %>
                          <p style="text-align: left; font-size: 14px;">Planet:
                            <span class="ps-1"><strong style="font-size: 18px; font-weight: bold;"><%= objectolivier.name_en.capitalize %></strong></span>
                          </p>
                        <% elsif card.object_type == 'Satellite' %>
                          <p style="text-align: left; font-size: 14px;">Satellite:
                            <span class="ps-1"><strong style="font-size: 18px; font-weight: bold;"><%= objectolivier.name_en.capitalize %></strong></span>
                          </p>
                        <% end %>
                      <% end %>
                  </div>
                  <div class="horizontal-line"></div>
                  <div style="text-align: left; font-size: 14px;">
                    <p>Moon Count:<%= object.moon_count %></p>
                    <p>First Discoveries:</p>
                    <p><%= object.first_discoveries %></P>
                    <p>Featured Moons:</p>
                    <p><%= object.featured_moons %></p>
                  </div>
                  <div class="horizontal-line"></div>
                  <div class="display-cards-buttons d-flex justify-content-between">
                    <button class="btn flip-button">
                      <i class="fas fa-sync-alt"></i> Flip card
                    </button>
                    <%= simple_form_for(@card, url: usergallery_usergallerycards_path(@usergallery), method: 'POST') do |f| %>
                      <%= f.input :id, as: :hidden %>
                      <%= f.submit "+ Add to gallery", class: 'm-3 btn' %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Card back -->
      <div class="flip-card-back">
        <div class="display-cards-card-bc container">
          <div class="row">
            <div class="col-md-6 d-flex align-items-center justify-content-center">
              <p class="display-cards-title"><%= object.name_en %> Information</p>
            </div>
            <div class="display-cards-info">
              <div class="col-md-6 d-flex align-items-center justify-content-center">
                <div class="d-flex justify-content-between">
                  <div class="display-cards-pic-back">
                    <%= image_tag "objects/#{object.image_path}" %>
                  </div>
                  <div class="vertical-line"></div>
                  <div style="width: 50%;">
                    <p style="text-align: center; font-size: 14px;">Average Distance to Earth:
                    <p>
                    <strong style="font-size:18px; font-family: AKONY;">~0.38</strong>
                    </p>
                    <p>/mm km</p>
                  </div>
                </div>
              </div>
              <div class="horizontal-line"></div>
                <p style="text-align: left; font: bold;">Funfact</p>
                <p style="text-align: left;"><%= object.funfact %></p>
              <div class="horizontal-line"></div>
              <p style="text-align: left;">Description</p>
              <p style="text-align: left;"><%= object.summary %></p>
              <div class="horizontal-line"></div>
              <div class="display-cards-buttons d-flex justify-content-between">
                <button class="btn flip-button">
                  <i class="fas fa-sync-alt"></i> Flip card
                </button>
                <%= simple_form_for(@card, url: usergallery_usergallerycards_path(@usergallery), method: 'POST') do |f| %>
                  <%= f.input :id, as: :hidden %>
                  <%= f.submit "+ Add to gallery", class: 'm-3 btn' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
