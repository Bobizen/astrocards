<div class="display-cards-bg-bc">
  <%= render "shared/newnavbar" %>
  <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
  <%= render "shared/logo" %>
    <div class="flipper">
      <% card = Card.find(@card.card_id) %>
      <% object = card.object %>
      <!-- Card front -->
      <div class="flip-card-front">
        <div class="display-cards-card-bc container">
          <div class="row">
            <div class="col-md-6 d-flex align-items-center justify-content-center">
              <p class="display-cards-title">Bonus Card</p>
            </div>
            <div class="col-md-6 d-flex align-items-center justify-content-center">
              <div class="d-flex flex-column align-items-center justify-content-center">
                <div class="display-cards-pic">
                  <%= image_tag "objects/#{object.image_path}" %>
                </div>
                <p style="font-size: 18px; font-family: AKONY;">
                  <i class="fas fa-star"></i>
                  <%= object.name_en %>
                  <i class="fas fa-star"></i>
                </p>
                <div class="display-cards-info">
                  <div class="horizontal-line"></div>
                  <div class="d-flex justify-content-between">
                    <div>
                      <p style="text-align: left;">Distance from Earth:</p>
                      <p>
                        <strong style="text-align: left;"><%= "TDB" %></strong>
                      /mm km
                      </p>
                    </div>
                    <div class="vertical-line"></div>
                    <div style="width: 50%;">
                      <p style="text-align: left;">Revolution:</p>
                      <p>
                        <strong style="text-align: left;"><%= "TBD" %></strong>
                      /earth years
                      </p>
                    </div>
                  </div>
                  <div class="horizontal-line"></div>
                  <p style="text-align: left; font-size: 14px;">Type of planet:
                    <strong style="font-size:18px;"><%= "TBD" %></strong>
                  </p>
                  <p style="text-align: left; font-size: 14px;">Main moons:
                    <strong style="font-size:18px;"><%= "TBD" %></strong>
                  </p>
                  <div class="horizontal-line"></div>
                  <div class="display-cards-buttons d-flex justify-content-between">
                    <button class="btn flip-button">
                      <i class="fas fa-sync-alt"></i> Flip card
                    </button>
                    <button class="btn">
                      <i class="fas fa-plus"></i> Add to gallery
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Card back -->
      <div class="flip-card-back">
        <div class="display-cards-card-bc container">
          <div class="row">
            <div class="col-md-6 d-flex align-items-center justify-content-center">
              <p class="display-cards-title"><%= object.name_en %> Information</p>
            </div>
            <div class="display-cards-info">
              <div class="col-md-6 d-flex align-items-center justify-content-center">
                <div class="d-flex justify-content-between">
                  <div class="display-cards-pic-back">
                    <%= image_tag "objects/#{object.image_path}" %>
                  </div>
                  <div class="vertical-line"></div>
                  <div style="width: 50%;">
                    <p>Distance from Earth:</p>
                    <p>
                      <strong style="text-align: left;"><%= "TBD" %></strong>
                      /mm km
                    </p>
                  </div>
                </div>
              </div>
              <div class="horizontal-line"></div>
              <div class="d-flex justify-content-between">
                <div>
                  <p>Distance from Earth:</p>
                  <p>
                  <strong>628 million km</strong>
                  </p>
                  <p>Type of planet:</p>
                  <p>
                    <strong style="font-size:18px;"><%= "TBD" %></strong>
                  </p>
                </div>
                <div class="vertical-line"></div>
                <div style="width: 50%;">
                  <p>Revolution:</p>
                  <p>
                    <strong style="text-align: left;"><%= "TBD" %></strong>
                    /earth years
                  </p>
                </div>
              </div>
              <div class="horizontal-line"></div>
              <p style="text-align: left;">Description:</p>
              <p style="text-align: left;"><%= object.summary %></p>
              <div class="horizontal-line"></div>
              <div class="display-cards-buttons d-flex justify-content-between">
                <button class="btn flip-button">
                  <i class="fas fa-sync-alt"></i> Flip card
                </button>
                <button class="btn">
                  <i class="fas fa-plus"></i> Add to gallery
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
